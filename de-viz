# ------------------------------------------------------------------------------
# de-viz: visualizations for differential expression analysis
#
# This script executes a workflow for visual evaluation of a differential
# expression analysis. Outputs include plots of gene expression distributions by
# sample before and after normalization, and a heatmap of gene expression
# values. The workflow was designed and tested on data generated by the
# RSEM/EBSeq pipeline, but should be easy to adapt for data produced by other
# packages.
# ------------------------------------------------------------------------------


SHELL := /usr/bin/env bash
MKFILE=$(word $(words $(MAKEFILE_LIST)),$(MAKEFILE_LIST))
BINDIR=$(shell dirname $(MKFILE))
define PROG_USAGE

de-viz: visualizations for differential expression analysis; see source code for
        a complete description of the inputs and outputs

Usage: de-viz [options] ebseqinfile=rsem.output.txt ebseqoutfile=ebseq.output.txt all
  Options:
    colors=COL,COL    a comma-separated pair of colors to use for heatmap;
                      default is colorblind-friendly 'yellow,blue'
    heatmap=FILE      plot heatmap of expression values to the given PNG file;
                      default is '$$workdir/heatmap.png'
    help              print this help message and exit
    postnorm=FILE     plot distributions of expression values post-normalization
                      to this PNG file; default is '$$workdir/post-norm.png'
    prenorm=FILE      plot distributions of expression values pre-normalization
                      to this PNG file; default is '$$workdir/pre-norm.png'
    samples=STRING    override sample labels from the input data files with a
                      comma-separated list of new labels
    workdir=DIR       directory in which to place temporary files and, by
                      default, the output files; default is current directory

endef
export PROG_USAGE


# Program options
ifndef ebseqinfile
  $(error ebseqinfile is not specified $(PROG_USAGE))
endif
ifndef ebseqoutfile
  $(error ebseqoutfile is not specified $(PROG_USAGE))
endif
workdir=.
colors=yellow,blue
heatmap=$(workdir)/heatmap.png
postnorm=$(workdir)/post-norm.png
prenorm=$(workdir)/pre-norm.png
ifdef samples
  samplearg= --samples=$(samples)
endif


# Temp files
de_molids=$(workdir)/diffexp.molids.txt
de_exprdata=$(workdir)/de.expr.dat


# N is the number of columns in the expression data file; number of samples + 1
N=$(shell awk '{print NF}' $(ebseqinfile) | sort -nu | tail -n 1)
# K = N+1, the index of the column containing fold change values for sorting
K=$(shell echo "$(N) + 1" | bc)


usage:
			@- echo "$$PROG_USAGE"

help:			usage
			

all:			$(workdir) $(heatmap) $(prenorm) $(postnorm)
			

$(workdir):		
			test -d $(workdir) || mkdir $(workdir)

$(de_molids):		$(ebseqoutfile)
			tail -n +2 $(ebseqoutfile) | cut -f 1 | tr -d '"' | sort | uniq > $(workdir)/diffexp.molids.txt

$(de_exprdata):		$(ebseqinfile) $(ebseqoutfile) $(de_molids)
			$(BINDIR)/selex $(de_molids) <(tail -n +2 $(ebseqinfile) | tr -d '"') > $(de_exprdata).unsorted
			$(BINDIR)/addfc $(de_exprdata).unsorted $(ebseqoutfile) | sort -n -k$(K),$(K) | cut -f 1-$(N) > $(de_exprdata).sorted
			cat <(head -n 1 $(ebseqinfile)) $(de_exprdata).sorted > $(de_exprdata)

$(heatmap):		$(de_exprdata) $(ebseqinfile)
			$(BINDIR)/heatmaker --colors='$(colors)' --columns --heatmap=$(heatmap) --norm=$(ebseqinfile) $(samplearg) < $(de_exprdata)

$(postnorm):		$(ebseqinfile)
			$(BINDIR)/norm-check --before=$(prenorm) --after=$(postnorm) < $(ebseqinfile)

$(prenorm):		$(postnorm)
			
